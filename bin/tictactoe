#!/usr/bin/env ruby

require_relative '../config/environment'

puts "**** Welcome to Tic Tac Toe! ****\n\n"
help

loop do
  puts "What mode do you want to play?"

  case gets.strip
  when "1"
    puts "Com vs Com"
  when "2"
    puts "Human vs Com"
  when "3"
    two_players
  when "help"
    help
  when "exit"
    break
  else
    puts "Invalid! type 'help' for help.\n\n"
  end

end
