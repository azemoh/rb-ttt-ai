#!/usr/bin/env ruby

require_relative '../config/environment'

def help
  puts "1. 0 Player (Com vs Com)\n2. 1 Player (Human vs Com)\n3. 2 Players (Human vs Human)\nType 'exit' to quit\n\n"
end

puts "**** Welcome to Tic Tac Toe! ****\n\n"
help

loop do
  puts "What mode do you want to play?"

  case gets.strip
  when "1"
    puts "Com vs Com"
  when "2"
    puts "Human vs Com"
  when "3"
    puts "Human vs Human"
  when "help"
    help
  when "exit"
    break
  else
    puts "Invalid! type 'help' for help\n\n"
  end

end
